#include <iostream>
using namespace std;
class Shape {
public:
    Shape(double r) { 
	cout << "Area of Circle: " << 3.14 * r * r << endl; }  
    Shape(double l, double b) { 
	cout << "Area of Rectangle: " << l * b << endl; }  
    Shape(double a, double b, double h) { 
	cout << "Area of Triangle: " << 0.5 * b * h << endl; } 
};
int main() {
    Shape circle(5), rectangle(4, 5), triangle(0, 4, 6);  
    return 0;
}
