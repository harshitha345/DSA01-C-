#include <iostream>
using namespace std;
int main() {
    int a, d, n;
    int sum = 0;
    cout << "Enter the first term (a): ";
    cin >> a;
    cout << "Enter the common difference (d): ";
    cin >> d;
    cout << "Enter the number of terms (n): ";
    cin >> n;
    for (int i = 0; i < n; i++) {
        sum += a + i * d;
    }
    cout << "The sum of the series is: " << sum << endl;
	return 0;
}
